<Window x:Class="Bookstore_App.ViewCustomers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bookstore_App"
        mc:Ignorable="d"
        Title="ViewCustomers" Height="450" Width="800">
    <Grid>
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,0,0,193"/>
        <Button Content="Back" HorizontalAlignment="Center" Margin="0,280,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Button Content="View Customer Details" HorizontalAlignment="Center" Margin="0,333,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Button Content="View Order Details" HorizontalAlignment="Center" Margin="0,386,0,0" VerticalAlignment="Top" FontSize="18"/>

    </Grid>
</Window>
